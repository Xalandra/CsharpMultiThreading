<Page
    x:Class="Vidarr.LandingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Vidarr"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="btnDownloader" Grid.Column="0" Height="1080" Width="960" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="0" BorderThickness="0" Margin="0,0,960,0" Foreground="Black" Background="#33FFFFFF" Click="btnDownloader_Click">
            <Image Source="Assets/DownloadHere.png" HorizontalAlignment="Left" Height="133" Margin="63,-30,0,0" VerticalAlignment="Top" Width="137" />
        </Button>
        <Button x:Name="btnConverter" HorizontalAlignment="Right" VerticalAlignment="Top" Width="960" Height="1080" FontSize="72" Margin="965,0,-5,0" Background="#33FFFFFF" Click="btnConverter_Click">
            <Image Source="Assets/Converter.png" HorizontalAlignment="Left" Height="133" Margin="63,-30,0,0" VerticalAlignment="Top" Width="146" />
        </Button>

    </Grid>
</Page>
